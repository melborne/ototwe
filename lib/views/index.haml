!!!
%html
  %head
    %meta{charset:'utf-8'}
    %meta{name:'viewport', content:'width=device-width, initial-scale=1.0'}
    %title OtoTwe
    %link{rel:'stylesheet', href: "//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"}
    %link{rel:'stylesheet', href:"//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap-theme.min.css"}
    %link{rel:'stylesheet', href:'css/jumbotron-narrow.css'}
    %link{rel:'stylesheet', href:'css/main.css'}

  %body
    .container
      .header
        %ul.nav.nav-pills.pull-right
          %li#audienceInner
            %input#audience{:type => "text", :disable => "disable", :value => 0}
            %label#audienceLabel.text-muted{:for => "audience"} Audiences
        %h3.text-muted OtoTwe
      .jumbotron
        #tweetInner
      .row.marketing
        %p.caution ∞ CAUTION SOUND LEVEL ∞
        / %input{type:"button", value:"Play", onclick:"Sound.play(SAMPLE_URLS)"}
        %input#volume{type:"range", value:"50", max:"100", min:"0"}
        %p.caution Volume
      .footer
        %p#credit
          %span ©
          %a{href:'http://melborne.github.io'} hp12c
          %span 2013
        %p#descript Tweet!  'hello! #ototwe #Eb3'

    %script{src:'js/jquery-2.0.3.min.js', type:'text/javascript'}
    %script{src:"//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js", type:'text/javascript'}
    %script{src:'//cwilso.github.com/AudioContext-MonkeyPatch/AudioContextMonkeyPatch.js', type:'text/javascript'}
    %script{src:'js/buffer-loader.js', type:'text/javascript'}
    %script{src:'js/application.js', type:'text/javascript'}
